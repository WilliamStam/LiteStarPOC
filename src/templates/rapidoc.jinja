<!doctype html> <!-- Important: must specify -->
<html>
<head>
    <meta charset="utf-8"> <!-- Important: rapi-doc uses utf8 characters -->
    <script type="module" src="/static/rapidoc-min.js"></script>
    <script src="/static/rapipdf-min.js"></script>
    <title>{{ app.title }}</title>
</head>
<body>
<rapi-doc
        id="docs"
        spec-url="/openapi.json"
        theme="light"
        heading-text="{{ app.title }}"
        primary-color="#ff8300"
        nav-bg-color="#212322"
        nav-accent-color="#ff8300"
        nav-accent-text-color="#ff8300"
        persist-auth="true"
        show-method-in-nav-bar="as-colored-block"

        layout="column"
        render-style="focused"
        nav-item-spacing="compact"
        show-header="false"
        allow-server-selection="false"
        allow-search="false"
        allow-advanced-search="false"
        use-path-in-nav-bar="true"

        sort-tags="true"

>
    <span slot="logo"></span>
    <div slot="nav-logo">


    </div>
    <div slot="overview">

        <rapi-pdf
                style="margin-top: 2rem; margin-bottom: 2rem"
                spec-url="/openapi.json"
                button-bg="#ff8300"
                hide-input="true"
                pdf-primary-color="#ff8300"
                pdf-alternate-color="#212322"
                pdf-title="{{ date }}"
                pdf-footer-text="&copy; Copyright Munsoft {{ year }}"
                pdf-schema-style="table"
                include-info="true"
                include-example="true"

        ></rapi-pdf>
    </div>


</rapi-doc>

</body>
</html>